<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingBottom="8dip"
    android:background="@drawable/background_c4a_2" >

    <TextView
        android:id="@+id/title"
        style="@style/c4aTV2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dip"
        android:paddingTop="0dip"
        android:paddingLeft="0dip"
        android:paddingRight="0dip"
        android:singleLine="true"
        android:gravity="center"
        android:background="@drawable/rectangletransparent"
        android:text="@string/analysisOptions"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/tv_color_margin_1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/btn_cancel"
            style="@style/c4aTV5"
            android:layout_width="wrap_content"
            android:onClick="myClickHandler"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:paddingLeft="@dimen/tv_color_margin_2"
            android:paddingRight="@dimen/tv_color_margin_2"
            android:background="@drawable/rectanglegrey"
            android:text="@string/btn_Cancel" />
        <TextView
            android:id="@+id/btn_apply"
            style="@style/c4aTV5"
            android:onClick="myClickHandler"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/tv_color_margin_2"
            android:paddingRight="@dimen/tv_color_margin_2"
            android:background="@drawable/rectanglegrey"
            android:text="@string/colorApply" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/gdScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_above="@id/actions" >

        <RelativeLayout android:id="@+id/rl1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cb_multipleEngines"
                style="@style/c4aCB1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/tv_color_margin_1"
                android:text="@string/multipleEngines" />

            <LinearLayout
                android:id="@+id/e1"
                android:layout_below="@id/cb_multipleEngines"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_color_margin_1"
                android:layout_marginBottom="@dimen/tv_color_margin_1"
                android:layout_marginStart="@dimen/tv_color_margin_1"
                android:weightSum="3"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/btn_e1"
                    style="@style/c4aTV5"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/tv_color_margin_1"
                    android:layout_marginBottom="@dimen/tv_color_margin_1"
                    android:layout_marginStart="@dimen/tv_color_margin_1"
                    android:background="@drawable/rectanglegrey"
                    android:text="@string/engine" />
                <TextView
                    android:id="@+id/e1_name"
                    style="@style/c4aTV1"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/tv_color_margin_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/e2"
                android:layout_below="@id/e1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_color_margin_1"
                android:layout_marginBottom="@dimen/tv_color_margin_1"
                android:layout_marginStart="@dimen/tv_color_margin_1"
                android:weightSum="3"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/btn_e2"
                    style="@style/c4aTV5"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/tv_color_margin_1"
                    android:layout_marginBottom="@dimen/tv_color_margin_1"
                    android:layout_marginStart="@dimen/tv_color_margin_1"
                    android:background="@drawable/rectanglegrey"
                    android:text="@string/engine" />
                <TextView
                    android:id="@+id/e2_name"
                    style="@style/c4aTV1"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/tv_color_margin_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/e3"
                android:layout_below="@id/e2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_color_margin_1"
                android:layout_marginBottom="@dimen/tv_color_margin_1"
                android:layout_marginStart="@dimen/tv_color_margin_1"
                android:weightSum="3"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/btn_e3"
                    style="@style/c4aTV5"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/tv_color_margin_1"
                    android:layout_marginBottom="@dimen/tv_color_margin_1"
                    android:layout_marginStart="@dimen/tv_color_margin_1"
                    android:background="@drawable/rectanglegrey"
                    android:text="@string/engine" />
                <TextView
                    android:id="@+id/e3_name"
                    style="@style/c4aTV1"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/tv_color_margin_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/e4"
                android:layout_below="@id/e3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv_color_margin_1"
                android:layout_marginBottom="@dimen/tv_color_margin_1"
                android:layout_marginStart="@dimen/tv_color_margin_1"
                android:weightSum="3"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/btn_e4"
                    style="@style/c4aTV5"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/tv_color_margin_1"
                    android:layout_marginBottom="@dimen/tv_color_margin_1"
                    android:layout_marginStart="@dimen/tv_color_margin_1"
                    android:background="@drawable/rectanglegrey"
                    android:text="@string/engine" />
                <TextView
                    android:id="@+id/e4_name"
                    style="@style/c4aTV1"
                    android:onClick="myClickHandler"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_marginStart="@dimen/tv_color_margin_1" />
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
