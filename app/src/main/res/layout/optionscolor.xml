<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:paddingTop="8dip"
                 android:paddingLeft="8dip"
                 android:paddingRight="8dip"
                 android:background="@drawable/background_c4a_2" >

<TextView
    android:id="@+id/title"
    style="@style/c4aTV2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="0dip"
    android:paddingTop="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip"
    android:singleLine="true"
    android:gravity="center"
    android:background="@drawable/rectangletransparent"
    android:text="@string/menu_colorsettings"
    android:textColor="#000000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title"
        android:layout_above="@id/btn"
        android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/btnMenu"
            style="@style/c4aImgBtn2"
            android:src="@drawable/button_menu2"
            android:onClick="myClickHandler"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/btn1_width"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"/>
        <EditText
            android:id="@+id/eName"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/btnMenu"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            style="@style/c4aET1" />

        <View android:id="@+id/div1" style="@style/Divider" android:layout_below="@id/btnMenu" />

        <TextView
            android:id="@+id/tFields"
            style="@style/c4aTV1"
            android:layout_below="@id/div1"
            android:text="@string/colorFields"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="100dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iFields1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div1"
            android:layout_toRightOf="@id/tFields"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iFields2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div1"
            android:layout_toRightOf="@id/iFields1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div2" style="@style/Divider" android:layout_below="@id/iFields1" />

        <TextView
            android:id="@+id/tPieces"
            style="@style/c4aTV1"
            android:layout_below="@id/div2"
            android:text="@string/colorPieces"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iPieces1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div2"
            android:layout_toRightOf="@id/tPieces"
            android:layout_alignLeft="@+id/iFields1"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iPieces2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div2"
            android:layout_toRightOf="@id/iPieces1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div3" style="@style/Divider" android:layout_below="@id/iPieces1" />

        <TextView
            android:id="@+id/tFromTo"
            style="@style/c4aTV1"
            android:layout_below="@id/div3"
            android:text="@string/colorFromTo"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iFromTo1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div3"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tFromTo"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iFromTo2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div3"
            android:layout_toRightOf="@id/iFromTo1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div4" style="@style/Divider" android:layout_below="@id/iFromTo1" />

        <TextView
            android:id="@+id/tCoordinates"
            style="@style/c4aTV1"
            android:layout_below="@id/div4"
            android:text="@string/colorCoordinates"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iCoordinates1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div4"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tCoordinates"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div5" style="@style/Divider" android:background="@android:color/holo_green_light" android:layout_below="@id/iCoordinates1" />

        <TextView
            android:id="@+id/tMoveList"
            style="@style/c4aTV1"
            android:layout_below="@id/div5"
            android:text="@string/colorMoveList"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iMoveList1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div5"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tMoveList"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iMoveList2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div5"
            android:layout_toRightOf="@id/iMoveList1"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iMoveList3"
            style="@style/c4aTVColor"
            android:layout_below="@id/div5"
            android:layout_toRightOf="@id/iMoveList2"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iMoveList4"
            style="@style/c4aTVColor"
            android:layout_below="@id/div5"
            android:layout_toRightOf="@id/iMoveList3"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div6" style="@style/Divider" android:layout_below="@id/iMoveList1" />

        <TextView
            android:id="@+id/tEngineList"
            style="@style/c4aTV1"
            android:layout_below="@id/div6"
            android:text="@string/colorEngineList"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iEngineList1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div6"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tEngineList"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iEngineList2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div6"
            android:layout_toRightOf="@id/iEngineList1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div7" style="@style/Divider" android:layout_below="@id/iEngineList1" />

        <TextView
            android:id="@+id/tInfo"
            style="@style/c4aTV1"
            android:layout_below="@id/div7"
            android:text="@string/colorInfo"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iInfo1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div7"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tInfo"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iInfo2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div7"
            android:layout_toRightOf="@id/iInfo1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div8" style="@style/Divider" android:layout_below="@id/iInfo1" />

        <TextView
            android:id="@+id/tData"
            style="@style/c4aTV1"
            android:layout_below="@id/div8"
            android:text="@string/colorData"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iData1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div8"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tData"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iData2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div8"
            android:layout_toRightOf="@id/iData1"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div9" style="@style/Divider" android:layout_below="@id/iData1" />

        <TextView
            android:id="@+id/tTime"
            style="@style/c4aTV1"
            android:layout_below="@id/div9"
            android:text="@string/colorTime"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iTime1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div9"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tTime"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iTime2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div9"
            android:layout_toRightOf="@id/iTime1"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iTime3"
            style="@style/c4aTVColor"
            android:layout_below="@id/div9"
            android:layout_toRightOf="@id/iTime2"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iTime4"
            style="@style/c4aTVColor"
            android:layout_below="@id/div9"
            android:layout_toRightOf="@id/iTime3"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div10" style="@style/Divider" android:layout_below="@id/iTime1" />

        <TextView
            android:id="@+id/tHighlighting"
            style="@style/c4aTV1"
            android:layout_below="@id/div10"
            android:text="@string/colorHighlighting"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iHighlighting1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div10"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tHighlighting"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div11" style="@style/Divider" android:layout_below="@id/iHighlighting1" />

        <TextView
            android:id="@+id/tArrowsA"
            style="@style/c4aTV1"
            android:layout_below="@id/div11"
            android:text="@string/colorArrows"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iArrow1"
            style="@style/c4aTVColor"
            android:layout_below="@id/div11"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tArrowsA"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow2"
            style="@style/c4aTVColor"
            android:layout_below="@id/div11"
            android:layout_toRightOf="@id/iArrow1"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow3"
            style="@style/c4aTVColor"
            android:layout_below="@id/div11"
            android:layout_toRightOf="@id/iArrow2"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow4"
            style="@style/c4aTVColor"
            android:layout_below="@id/div11"
            android:layout_toRightOf="@id/iArrow3"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div12" style="@style/Divider" android:layout_below="@id/iArrow1" />

        <TextView
            android:id="@+id/tArrowsB"
            style="@style/c4aTV1"
            android:layout_below="@id/div12"
            android:text="@string/colorArrows2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/iArrow5"
            style="@style/c4aTVColor"
            android:layout_below="@id/div12"
            android:layout_alignLeft="@+id/iFields1"
            android:layout_toRightOf="@id/tArrowsB"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow6"
            style="@style/c4aTVColor"
            android:layout_below="@id/div12"
            android:layout_toRightOf="@id/iArrow5"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow7"
            style="@style/c4aTVColor"
            android:layout_below="@id/div12"
            android:layout_toRightOf="@id/iArrow6"
            android:onClick="myClickHandler" />
        <TextView
            android:id="@+id/iArrow8"
            style="@style/c4aTVColor"
            android:layout_below="@id/div12"
            android:layout_toRightOf="@id/iArrow7"
            android:onClick="myClickHandler" />
        <View android:id="@+id/div13" style="@style/Divider" android:layout_below="@id/iArrow5" />

    </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btn"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tv_color_margin_1"
        android:layout_marginTop="@dimen/tv_color_margin_1"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tReset"
            style="@style/c4aTV5"
            android:onClick="myClickHandler"
            android:background="@drawable/rectanglepink"
            android:layout_marginRight="@dimen/tv_color_margin_1"
            android:text="@string/colorReset" />
        <TextView
            android:id="@+id/tApply"
            style="@style/c4aTV5"
            android:onClick="myClickHandler"
            android:background="@drawable/rectanglegreen"
            android:layout_marginLeft="@dimen/tv_color_margin_1"
            android:text="@string/colorApply" />
    </LinearLayout>

</RelativeLayout>