<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="8dip"
	android:paddingLeft="8dip"
    android:paddingRight="8dip"
	android:background="@drawable/background_c4a_2" >

	<TextView
		android:id="@+id/title"
		style="@style/c4aTV2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="0dip"
		android:paddingTop="0dip"
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:singleLine="true"
		android:gravity="center"
		android:background="@drawable/rectangletransparent"
		android:text="@string/app_optionsEnginePlay"
		android:textColor="#000000" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@id/title"
		android:layout_above="@id/btnGuOk"
		android:orientation="vertical" >
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical" >
			<LinearLayout
				android:id="@+id/llVariants"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_marginTop="@dimen/margin_1"
				android:layout_marginBottom="@dimen/margin1"
				android:orientation="horizontal" >
				<TextView
					style="@style/c4aTV1"
					android:layout_width="@dimen/tv_width"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:paddingTop="0dip"
					android:paddingLeft="0dip"
					android:paddingRight="0dip"
					android:text="@string/epMultiPv" />
				<TextView
					android:id="@+id/variantsMinus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_1"
					android:layout_marginRight="0dp"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglepink"
					android:textSize="@dimen/tv_text_size_36"
					android:text="-" />
				<TextView
					android:id="@+id/variantsValue"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin1"
					android:layout_marginRight="@dimen/margin1"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectangleyellow"
					android:textSize="@dimen/tv_text_size_36"
					android:inputType="number"
					android:text="0" />
				<TextView
					android:id="@+id/variantsPlus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="0dp"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglegreen"
					android:textSize="@dimen/tv_text_size_36"
					android:text="+" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/llMoves"
				android:layout_below="@id/llVariants"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_marginBottom="@dimen/margin1"
				android:orientation="horizontal" >
				<TextView
					style="@style/c4aTV1"
					android:layout_width="@dimen/tv_width"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:paddingTop="0dip"
					android:paddingLeft="0dip"
					android:paddingRight="0dip"
					android:text="@string/epPvMoves" />
				<TextView
					android:id="@+id/movesMinus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_1"
					android:layout_marginRight="0dp"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglepink"
					android:textSize="@dimen/tv_text_size_36"
					android:text="-" />
				<TextView
					android:id="@+id/movesValue"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin1"
					android:layout_marginRight="@dimen/margin1"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectangleyellow"
					android:textSize="@dimen/tv_text_size_36"
					android:inputType="number"
					android:text="0" />
				<TextView
					android:id="@+id/movesPlus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="0dp"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglegreen"
					android:textSize="@dimen/tv_text_size_36"
					android:text="+" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/llLines"
				android:layout_below="@id/llMoves"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_marginBottom="@dimen/margin1"
				android:orientation="horizontal" >
				<TextView
					style="@style/c4aTV1"
					android:layout_width="@dimen/tv_width"
					android:layout_height="wrap_content"
					android:layout_marginTop="0dp"
					android:paddingTop="0dip"
					android:paddingLeft="0dip"
					android:paddingRight="0dip"
					android:text="@string/engineDisplayedLines" />
				<TextView
					android:id="@+id/linesMinus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin_1"
					android:layout_marginRight="0dp"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglepink"
					android:textSize="@dimen/tv_text_size_36"
					android:text="-" />
				<TextView
					android:id="@+id/linesValue"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="@dimen/margin1"
					android:layout_marginRight="@dimen/margin1"
					android:paddingTop="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectangleyellow"
					android:textSize="@dimen/tv_text_size_36"
					android:inputType="number"
					android:text="0" />
				<TextView
					android:id="@+id/linesPlus"
					style="@style/c4aTV4"
					android:layout_width="@dimen/btn_size_70"
					android:layout_height="wrap_content"
					android:layout_marginLeft="0dp"
					android:paddingBottom="0dp"
					android:paddingLeft="@dimen/margin_1"
					android:paddingRight="@dimen/margin_1"
					android:background="@drawable/rectanglegreen"
					android:textSize="@dimen/tv_text_size_36"
					android:text="+" />
			</LinearLayout>
			<CheckBox
				android:id="@+id/cbEpAutoStartEngine"
				android:layout_below="@id/llLines"
				style="@style/c4aCB1"
				android:text="@string/epAutoStartEngine" />
			<CheckBox
				android:id="@+id/cbEpEngineMessage"
				style="@style/c4aCB1"
				android:layout_below="@id/cbEpAutoStartEngine"
				android:text="@string/epEngineMessage" />
			<CheckBox
				android:id="@+id/cbEpPonder"
				style="@style/c4aCB1"
				android:layout_below="@id/cbEpEngineMessage"
				android:text="@string/epPonder" />
			<CheckBox
				android:id="@+id/cbEpRandomFirstMove"
				style="@style/c4aCB1"
				android:layout_below="@id/cbEpPonder"
				android:text="@string/epRandomFirstMove" />

			<RelativeLayout
				android:id="@+id/rlBook"
				android:layout_width="fill_parent"
				android:layout_height="match_parent"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_below="@id/cbEpRandomFirstMove"
				android:orientation="horizontal" >
				<ImageView
					android:id="@+id/epBook"
					style="@style/c4aImgBtn1"
					android:src="@drawable/btn_pgn_load"
					android:onClick="myClickHandler"
					android:layout_alignParentRight="true"
					android:layout_marginBottom="1dip" />
				<EditText
					android:id="@+id/tvEpBookName"
					style="@style/c4aET1"
					android:clickable="true"
					android:focusable="false"
					android:onClick="myClickHandler"
					android:hint="@string/epBookHint"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/margin_1"
					android:layout_marginRight="5dip"
					android:layout_alignParentLeft="true"
					android:layout_toLeftOf="@id/epBook" />
			</RelativeLayout>
			<CheckBox
				android:id="@+id/cbEpOpeningBook"
				style="@style/c4aCB1"
				android:layout_below="@id/rlBook"
				android:text="@string/epOpeningBook" />
			<CheckBox
				android:id="@+id/cbEpShowBookHints"
				style="@style/c4aCB1"
				android:layout_below="@id/cbEpOpeningBook"
				android:text="@string/epShowBookHints" />

			<SeekBar
				android:id="@+id/strength"
				android:layout_below="@id/cbEpShowBookHints"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_marginRight="@dimen/margin_1"
				android:max="100" />
			<TextView
				android:id="@+id/strengthValue"
				android:layout_below="@id/strength"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_1"
				android:textSize="18sp"
				android:textColor="@color/text_light" />

			<SeekBar
				android:id="@+id/aggressiveness"
				android:layout_below="@id/strengthValue"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dip"
				android:layout_marginLeft="@dimen/margin_1"
				android:layout_marginRight="@dimen/margin_1"
				android:max="200" />
			<TextView
				android:id="@+id/aggressivenessValue"
				android:layout_below="@id/aggressiveness"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin_1"
				android:textSize="18sp"
				android:textColor="@color/text_light" />

			<CheckBox
				android:id="@+id/debugInformation"
				style="@style/c4aCB1"
				android:text="@string/debugInformation" />

			<CheckBox
				android:id="@+id/logOn"
				style="@style/c4aCB1"
				android:text="@string/epLogging" />

		</LinearLayout>
	</ScrollView>

	<ImageView
		android:id="@+id/btnGuOk"
		style="@style/c4aImgBtn1"
		android:src="@drawable/button_ok"
		android:onClick="myClickHandler"
		android:layout_marginBottom="6dip"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"/>

</RelativeLayout>
